<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.mmontuori.atrix_mrom" android:versionCode="2" android:versionName="1.5">
	<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15" />
	<application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme" android:configChanges="orientation">
		<receiver android:name="StartCheckIn">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
		<service android:name=".CheckIn" android:icon="@drawable/ic_launcher" android:label="@string/checkin_service_name" android:process=":my_process" />
		<activity android:name=".TestCheckin" android:label="@string/main_title">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
</manifest>
